<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quiz.lesson06.dao.PensionDAO">

	<select id="selectPensionInfo" 
		resultType="com.quiz.lesson06.model.Pension">
		SELECT
			`id`
			,`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM 
			`booking`
	</select>
	
	<delete id="deletePension" parameterType="int">
		DELETE
		FROM
			`booking`
		WHERE `id` = #{id}
	</delete>
	<insert id="insertPension" parameterType="map">
		INSERT INTO `booking`
		(
			`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{name}
			,#{headcount}
			,#{day}
			,#{date}
			,#{phoneNumber}
			,#{state}
			,NOW()
			,NOW()
		)
		
	</insert>
</mapper>